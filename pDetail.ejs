<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MLB PLayer List</title>
    <link rel="stylesheet" href="/index.css">
    <style>
        .header>th {
            background-color: <%=(JSON.parse(yearByYearStats[0].teamInfo.color))[0]%>;
            text-align: center;
            color : white;
        }

        tr>td {
            text-align: center;
            /* color:red; */
        }

        table {
            width: 100%
        }

        table,
        td,
        th {
            border: 1px solid #555;
            border-collapse: collapse;
        }

        * {
            box-sizing: border-box;
            color : #041e42;
        }

        .header__nav-top {
            background-color: #041e42;
            position: relative;
            height: 70px;
            display: block
        }

        .menugroup {
            height: 70px;
            /* background-color: green; */
            position: absolute;
            top: 0px;
            font-size: 0px;
            padding: 0px;
        }

        .header__nav-top>.rightside {
            right: 0px;
        }

        .header__nav-top>.leftside {
            left: 100px;
        }

        .header__nav-top .menuitem {
            transform: translateY(-50%);
            margin-top: 35px;
            font-size: 30px;
            border-bottom: 0px solid #ffff00;
            display: inline-block;
            /* background-color: red; */
        }

        .header__nav-top .menuitem>a {
            color: white;
        }

        .header__nav-top>.rightside>.menuitem {
            margin-right: 15px;
        }

        .header__nav-top>.leftside>.menuitem {
            margin-left: 15px;
        }

        #logo {
            margin-top: 10px;
            margin-left: 10px;
        }

        div.header__mnav-top {
            /* background: red; */
            display: none;
        }

        #imgtd {
            width: 20px;
        }

        a {
            text-decoration: none;
        }

        body {
            margin: 0px;
        }

        @media screen and (max-width: 600px) {
            div.header__nav-top {
                /* background: red; */
                display: none;
            }

            div.header__mnav-top {
                /* background: red; */
                position: relative;
                background-color: #041e42;
                display: block;
                text-align: center;

            }

            div.header__mnav-top>img {
                margin-top: 5px;
            }

            .menugroupMobile {
                padding: 0px;
                border: 0px solid red;
                font-size: 0px;
                display: table;
                width: 100%;
            }

            .menugroupMobile>li {
                border: 0px solid white;
                display: table-cell;
                font-size: 20px;
                width: 25%;
            }

            .menugroupMobile>li>a {
                color: white;
            }

            #hambergur {
                position: absolute;
                left: 5px;
                top: 0px;
                font-size: 20px;
                /* background-color: red; */
            }
        }
    </style>
</head>

<body>
    <div class="header__nav-top">
        <a href="https://mlbplayerlist.com/playersearch">
            <img src="//www.mlbstatic.com/team-logos/league-on-dark/1.svg" id="logo" height="50">
        </a>
        <ul class="menugroup leftside">
            <li class="menuitem"><a href="https://mlbplayerlist.com/schedule">Schedule</a></li>
            <li class="menuitem"><a href="">Rmenu2</a></li>
        </ul>
        <ul class="menugroup rightside">
            <li class="menuitem"><a href="https://mlbplayerlist.com/schedule">Result</a></li>
            <li class="menuitem"><a href="">menu2</a></li>
            <li class="menuitem"><a href="">menu3</a></li>
            <li class="menuitem"><a href="">menu4</a></li>
        </ul>
    </div>

    <div class="header__mnav-top">
        <div id="hambergur"><i class="fas fa-bars"></i></div>
        <img src="//www.mlbstatic.com/team-logos/league-on-dark/1.svg" height="25">
        <ul class="menugroupMobile bottomside">
            <li class="menuitem"><a href="https://mlbplayerlist.com/schedule">Result</a></li>
            <li class="menuitem"><a href="">Rmenu1</a></li>
            <li class="menuitem"><a href="">Rmenu1</a></li>
            <li class="menuitem"><a href="">Rmenu2</a></li>
        </ul>
    </div>
    <div>
        <img alt="player" src=<%=yearByYearStats[0].image%>>
        <div><b> Name : </b>
            <span>
                <%=yearByYearStats[0].name%>
            </span>
        </div>
        <div><b> Team : </b>
            <span>
                <%=yearByYearStats[0].currTeam%>
            </span>
        </div>
        <div><b> Postion : </b>
            <span>
                <%= yearByYearStats[0].position %>
            </span>
        </div>
        <div><b> MLB Debut : </b>
            <span>
                <%=yearByYearStats[0].debut%>
            </span>
        </div>
    </div>
    <% if (yearByYearStats[0].position==="P" ) { %>
        <table>
            <tr class="header">
                <th>season</th>
                <th>totalGame</th>
                <!-- <th>Nick</th> -->
                <th>Wins</th>
                <th>Losses</th>
                <th>era</th>
                <th>WHIP</th>
            </tr>
            <% for(let i=0;i<(yearByYearStats[0].stats).length;i++){ %>
                <tr>
                    <td class="season">
                        <%=(yearByYearStats[0].stats)[i].year%>
                    </td>
                    <td class="totalGame">
                        <%=(yearByYearStats[0].stats)[i].totalGame%>
                    </td>
                    <td class="wins">
                        <%=(yearByYearStats[0].stats)[i].wins%>
                    </td>
                    <td class="losses">
                        <%=(yearByYearStats[0].stats)[i].losses%>
                    </td>
                    <td class="era">
                        <%=(yearByYearStats[0].stats)[i].era%>
                    </td>
                    <td class="WHIP">
                        <%=(yearByYearStats[0].stats)[i].whip%>
                    </td>
                </tr>
                <% } %>
        </table>
        <%}else{%>
            <table>
                <tr class="header">
                    <th>season</th>
                    <th>totalGame</th>
                    <!-- <th>Nick</th> -->
                    <th>AVG</th>
                    <th>H</th>
                    <th>OBP</th>
                    <th>OPS</th>
                </tr>
                <% for(let i=0;i<(yearByYearStats[0].stats).length;i++){ %>
                    <tr>
                        <td class="season">
                            <%=(yearByYearStats[0].stats)[i].year%>
                        </td>
                        <td class="totalGame">
                            <%=(yearByYearStats[0].stats)[i].gamesPlayed%>
                        </td>
                        <td class="AVG">
                            <%=(yearByYearStats[0].stats)[i].avg%>
                        </td>
                        <td class="h">
                            <%=(yearByYearStats[0].stats)[i].homeRuns%>
                        </td>
                        <td class="OBP">
                            <%=(yearByYearStats[0].stats)[i].obp%>
                        </td>
                        <td class="ops">
                            <%=(yearByYearStats[0].stats)[i].ops%>
                        </td>
                    </tr>
                    <% } %>
            </table>
            <% } %>
                <button class="searchButton"> goBackToSearch </button>

                <script>
                    let searchButton = document.querySelector(".searchButton");
                    searchButton.addEventListener('click', function () {
                        let url = "https://mlbplayerlist.com/playersearch";
                        location.href = url;
                    });
                    function makeTableSortable(table) {
                        let tbody = table.querySelector('tbody');
                        let cell = [...table.querySelectorAll('tbody > tr')][0].querySelectorAll('th');
                        cell.forEach((th, i) => {
                            let toggle = false;
                            th.addEventListener('click', e => {
                                let trr = [...table.querySelectorAll('tbody > tr')];
                                if (trr.length < 2) return;
                                let tds = trr[1].querySelectorAll('td');
                                let sortKey = tds[i].className;
                                let trs = trr.splice(1)
                                trs.forEach(tr => tr.parentElement.removeChild(tr))

                                trs.sort(function (a, b) {
                                    let column = '.' + sortKey;
                                    let ac = a.querySelector(column).innerText.trim();
                                    let bc = b.querySelector(column).innerText.trim();
                                    let va = isNaN(ac) ? ac : Number(ac);
                                    let vb = isNaN(bc) ? bc : Number(bc);
                                    if (va > vb) {
                                        return 1 * (toggle ? 1 : -1)
                                    }
                                    if (va < vb) {
                                        return -1 * (toggle ? 1 : -1)
                                    }
                                    return 0
                                });

                                trs.forEach(tr => tbody.appendChild(tr))
                                toggle = !toggle;
                            })
                        })
                    }


                    let table = document.querySelector('table');
                    makeTableSortable(table);


                </script>
</body>

</body>

</html>